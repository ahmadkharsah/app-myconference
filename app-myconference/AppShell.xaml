<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="app_myconference.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:app_myconference"
    xmlns:pages="clr-namespace:app_myconference.Pages"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Schedule" Icon="tab_schedule.png">
            <ShellContent
            Title="Day1"
            ContentTemplate="{DataTemplate pages:ScheduleDay1Page}"
            Route="ScheduleDay1" />
            <ShellContent
            Title="Day2"
            ContentTemplate="{DataTemplate pages:ScheduleDay2Page}"
            Route="ScheduleDay2" />            
        </Tab>
        <Tab Title="My Agenda" Icon="tab_agenda.png">
            <ShellContent
            Title="Day1"
            ContentTemplate="{DataTemplate pages:AgendaPage}"
            Route="MyAgendaDay1" />
            <ShellContent
            Title="Day2"
            ContentTemplate="{DataTemplate pages:AgendaPage}"
            Route="MyAgendaDay2" />            
        </Tab>
        <Tab Title="Sponsers" Icon="tab_sponsers.png">
            <ShellContent
            Title="Sponsers"
            ContentTemplate="{DataTemplate pages:SponsersPage}"
            Route="Sponsers" />
        </Tab>
    </TabBar>
</Shell>
